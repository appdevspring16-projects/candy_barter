<div class="page-header">
  <h3>Inventory #<%= @inventory.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @inventory.user_id %></dd>

      <dt>Item</dt>
      <dd><%= @inventory.item_id %></dd>

      <dt>Quantity</dt>
      <dd><%= @inventory.quantity %></dd>

      <dt>Condition</dt>
      <dd><%= @inventory.condition %></dd>

      <dt>Visible to public</dt>
      <dd><%= @inventory.visible_to_public %></dd>

      <dt>Proposed trade</dt>
      <dd><%= @inventory.proposed_trade_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/inventories" class="btn btn-primary">
        Back
      </a>
      <a href="/inventories/<%= @inventory.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_inventory/<%= @inventory.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
